#version 450
layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;
layout(rgba16f, binding = 1) uniform image3D octree;

void main() {
    ivec3 pixel_coord = ivec3(gl_GlobalInvocationID);
    vec4 color = pixel_coord.x < 2 ? vec4(1.0, 0.0, 0.0, 1.0) : vec4(0.0, 0.0, 0.0, 1.0);
    imageStore(octree, pixel_coord, color);
}
